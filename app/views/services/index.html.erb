
<div class="navigation-header">
  <div class="navbar non-sticky">
    <div class="container">
      <div class="col-lg-3 navbar-header">
        <a class="navbar-brand" href="/"><h2 class="menu-logo" style="color: #323232;">Connect<span class="strong">Me</span>To</h2></a>
      </div>
      <!-- SEARCH INPUT BOX -->
      <%= form_tag services_path, class: "form-inline", method: "get" do %>
        <div class="col-lg-6">
          <div class="input-group">
            <%= text_field_tag :search, params[:search], id: "search-box", class: "form-control input-box", placeholder: "Search for..." %>
            <span class="input-group-btn">
                <%= submit_tag "Search", id: "search-button", class: "btn btn-default search-button", style: "margin-top: 0px" %>
            </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div class="page_wrapper" style="padding-bottom: 500px; padding-top: 70px">
  <div class="usquare_module_wrapper usquare_logos_style">
    <div class="usquare_module_shade"></div>

    <% @services.each do |service| %>
    <% rand_logo = 1 + rand(8) %>
      <div class="usquare_block">
        <%= image_tag "2.jpg", class: "usquare_square", alt: "logo" %>
        <div class="usquare_square usquare_square_bg2">
          <div class="usquare_square_text_wrapper">
            <%= image_tag "arrow.png", class: "usquare_arrow", alt: "arrow" %>
            <div class="clear"></div>
            <h2><%= service.user.name %></h2>
            <span><%= service.user.major %> | <%= service.user.email %></span>
            <div class="clear"></div>
          </div>
        </div>
        <div class="usquare_block_extended usquare square_bg1">
          <%= image_tag "close.png", class: "close", alt: "close" %>
          <ul class="social_background">
            <li><%= image_tag "social-fb.png", alt: "social" %></li>
            <li><%= image_tag "social-tw.png", alt: "social" %></li>
            <li><%= image_tag "social-in.png", alt: "social" %></li>
            <li><%= image_tag "social-pint.png", alt: "social" %></li>
            <li><%= image_tag "social-yah.png", alt: "social" %></li>
            <li><%= image_tag "social-dig.png", alt: "social" %></li>
          </ul>

          <div class="clear"></div>
          <span class="bold">info:</span>
          <span class="usqare_about">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. </span>
        </div>
      </div>
    <% end %>
  </div>
</div>


