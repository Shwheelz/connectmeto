                <div class="row">
                        <div class="search-container">

                        <!-- SEARCH INPUT BOX -->
                    		<%= form_tag services_path, method: "get" do %>
                    			<div class="input-group">
	                    			<%= text_field_tag :search, params[:search], id: "search-box", class: "form-control input-box", placeholder: "Enter Services to Search for..." %>
	                    			<span class="input-group-btn">
	                        			<%= submit_tag "Browse Services", id: "search-button", class: "btn btn-default standard-button", style: "margin-top: 0px" %>
	                        		</span>
                        		</div>
                        	<% end %>
                    
                        </div>
                </div>

				<p class="sub-heading">
				    ConnectMeTo is an online service hub designed to connect local businesses with university resources to promote economic development.
				</p>
                <div class="offer-services">
                    <!-- BROWSE BUTTON -->
                    <a href="services/new"><button type="button" id="subscribe-button1" class="btn standard-button">Offer Services</button></a>
                </div>    
				
				
			</div>
			
			
			
		</div>
		
	</div>
	<!-- /END HEADING, FEATURES AND REGISTRATION FORM CONTAINER -->
	
