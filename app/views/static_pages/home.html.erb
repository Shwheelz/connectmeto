	<!-- HEADING, FEATURES AND REGISTRATION FORM CONTAINER -->
	<div class="container">
		
		<div class="row">
			
			<!-- LEFT - HEADING AND TEXTS -->
			<div class="col-md-10 col-md-offset-1 intro-section">
				
				<h1 class="intro">
                    Connect<span class="strong colored-text">Me</span>To
				</h1>
                
